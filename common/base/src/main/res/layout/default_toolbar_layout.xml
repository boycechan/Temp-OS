<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:orientation="horizontal"
    tools:ignore="ResourceName">

    <LinearLayout
        android:id="@+id/ll_toolbar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_toolbar_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_18" />

        <ImageButton
            android:id="@+id/ib_toolbar_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:padding="@dimen/dp_10"
            android:src="@drawable/svg_close"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginRight="@dimen/dp_44"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:textColor="@color/black_111111"
        android:textSize="@dimen/dp_24"
        app:autoSizeMaxTextSize="@dimen/dp_24"
        app:autoSizeMinTextSize="@dimen/dp_12"
        app:autoSizeStepGranularity="@dimen/dp_1"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/tv_toolbar_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_24" />
</FrameLayout>